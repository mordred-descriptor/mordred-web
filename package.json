{
    "name": "mordred-web",
    "version": "0.1.0",
    "repository": "https://github.com/mordred-descriptor/mordred-web.git",
    "author": "Hirotomo Moriwaki <philopon.dependence@gmail.com>",
    "license": "BSD-3-Clause",
    "dependencies": {
        "@types/classnames": "~2.2.0",
        "@types/history": "~4.6.0",
        "@types/jquery": "~3.3.2",
        "@types/object-assign": "~4.0.30",
        "@types/qs": "~6.5.0",
        "@types/react": "~16.3.14",
        "@types/react-dom": "~16.0.3",
        "@types/react-onclickoutside": "~6.0.0",
        "@types/react-redux": "~6.0.0",
        "@types/react-virtualized": "~9.18.3",
        "@types/redux-logger": "~3.0.0",
        "autoprefixer": "~8.5.0",
        "axios": "~0.18.0",
        "browser-sync": "~2.24.4",
        "classnames": "~2.2.5",
        "cpx": "~1.5.0",
        "cssnano": "~3.10.0",
        "es6-promise": "~4.2.2",
        "event-source-polyfill": "~0.0.9",
        "font-awesome": "~4.7.0",
        "history": "~4.7.2",
        "ngl": "~0.10.3",
        "node-sass": "~7.0.0",
        "npm-run-all": "~4.1.1",
        "object-assign": "~4.1.1",
        "postcss-cli": "~5.0.0",
        "prettier": "~1.12.1",
        "pug-cli": "~1.0.0-alpha6",
        "qs": "~6.5.0",
        "react": "~16.3.2",
        "react-dom": "~16.3.2",
        "react-onclickoutside": "~6.7.1",
        "react-redux": "~5.0.5",
        "react-virtualized": "~9.19.0",
        "redux": "~4.0.0",
        "redux-logger": "~3.0.6",
        "redux-saga": "~0.16.0",
        "rimraf": "~2.6.1",
        "spectre.css": "~0.5.0",
        "tslint": "~5.10.0",
        "typescript": "~2.8.3",
        "url-search-params": "~0.10.0",
        "webpack": "^4.8.3",
        "webpack-cli": "^2.1.3"
    },
    "config": {
        "port": 3000,
        "devport": 3001,
        "static": "./python/mordred_web/static"
    },
    "scripts": {
        "build": "run-p build:*",
        "build:js": "run-s build:js:ts build:js:bundle",
        "build:js:ts": "tsc",
        "build:js:bundle": "webpack-cli --output-path $npm_package_config_static/js",
        "build:pug": "pug pug -o $npm_package_config_static",
        "build:sass": "node-sass sass/main.scss -o tmp/css",
        "build:postcss":
            "postcss tmp/css/main.css --use autoprefixer --use cssnano --no-map -d $npm_package_config_static/css",
        "build:font": "cpx node_modules/font-awesome/fonts/\\* $npm_package_config_static/fonts",
        "build:examples": "cpx help/examples/\\* $npm_package_config_static/examples",
        "watch":
            "npm-run-all -s build:js:ts -p watch:sass \"build:js:ts -- -w\" \"build:js:bundle -- -w\" \"build:pug -- -w\" \"build:font -- -w\" \"build:postcss -- -w\" server browser-sync",
        "watch:sass": "auto-reload-server -i -w sass -j package.json:.scripts.build:sass",
        "server":
            "auto-reload-server -i -w ./python/mordred_web -x static -c \"PYTHONPATH=python python -m mordred_web --port $npm_package_config_port --no-browser\"",
        "browser-sync":
            "browser-sync start --proxy localhost:$npm_package_config_port --files $npm_package_config_static --port $npm_package_config_devport",
        "clean": "rimraf tmp $npm_package_config_static static",
        "copy": "cpx \"$npm_package_config_static/**\" static",
        "production": "NODE_ENV=production run-s build copy"
    }
}
